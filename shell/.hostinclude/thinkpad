## Host specific functions, aliases and environment variables for ThinkPad clients

# Turn SD card reader on and off
sdreader() {
	while :; do
		case $1 in
			on	) echo "2-3" | sudo tee /sys/bus/usb/drivers/usb/bind &>/dev/null && echo 'SD card reader on' || echo 'No change' ;;
			off	) echo "2-3" | sudo tee /sys/bus/usb/drivers/usb/unbind &>/dev/null && echo 'SD card reader off' || echo 'No change' ;;
			*	) echo "Error" ;;
		esac
		return
	done
}

# Alias to turn the screen off
alias screenoff='sleep 1; xset dpms force off'

# Alias for battery info
alias battery='date; sudo tlp-stat -b'

# Set variables for Windows applications if running on Windows
if grep -iq Microsoft /proc/version; then
	export BROWSER='/mnt/c/Program\ Files/qutebrowser/qutebrowser.exe'
fi
