Host *
	HashKnownHosts yes
	StreamLocalBindUnlink yes
	ControlMaster auto
	ControlPersist 8h
	ControlPath ${TMPDIR}/.ssh_control-%n-%p-%r
	Compression yes
	SendEnv LANG

Host mikrotik
	HostName 192.168.88.1
	User jason
	IdentityFile ~/.ssh/id_rsa
	IdentitiesOnly yes

Host proxima
	HostName 192.168.88.2
	User pi
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes

Host osiris
	HostName osiris.jinkosystems.co.uk
	User jason
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes
	VerifyHostKeyDNS ask

Host isis
	HostName isis.jinkosystems.co.uk
	User jason
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes
	VerifyHostKeyDNS ask

Host amunet
	HostName amunet.jinkosystems.co.uk
	# ProxyJump osiris.jinkosystems.co.uk
	User jason
	IdentityFile ~/.ssh/id_rsa
	IdentitiesOnly yes
	ForwardAgent yes
	VerifyHostKeyDNS ask
	StrictHostKeyChecking no
	RemoteForward /run/user/1000/gnupg/S.gpg-agent ${HOME}/.gnupg/S.gpg-agent.extra

Host *.amazonaws.com
    # ProxyJump osiris.jinkosystems.co.uk
	IdentityFile ~/.ssh/id_rsa
	IdentitiesOnly yes
	RemoteForward /run/user/1000/gnupg/S.gpg-agent ${HOME}/.gnupg/S.gpg-agent.extra

Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_github
	IdentitiesOnly yes
	# StrictHostKeyChecking no
