Host *
#	SetEnv TERM=xterm-256color

Host mikrotik
	HostName 192.168.88.1
	User jason
	IdentityFile ~/.ssh/id_rsa
	IdentitiesOnly yes
	VisualHostKey=yes

Host proxima
	HostName 192.168.88.2
	User pi
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes
	VisualHostKey=yes

Host osiris
	HostName osiris.jinkosystems.co.uk
	User jason
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes
	VerifyHostKeyDNS ask
	VisualHostKey=yes
#	SetEnv TERM=xterm-24bit

Host isis
	HostName isis.jinkosystems.co.uk
	User jason
	IdentityFile ~/.ssh/id_ecdsa
	IdentitiesOnly yes
	ForwardAgent yes
	VerifyHostKeyDNS ask
	VisualHostKey=yes
#	SetEnv TERM=xterm-24bit

Host *.amazonaws.com
	ProxyJump osiris.jinkosystems.co.uk
	IdentityFile ~/.ssh/id_rsa_aws_2021-07-16
	IdentitiesOnly yes
	ForwardAgent yes
