# Git config - Linux

[user]
	name = eggbean
	email = 815311+eggbean@users.noreply.github.com
[core]
	editor = vim
	pager = delta
	hooksPath = .githooks
[init]
	defaultBranch = master
[branch]
	; autoSetupMerge = always
	autoSetupRebase = always
[commit]
	cleanup = scissors
[push]
	default = upstream
	useForceIfIncludes = true
[pull]
	ff = only
	rebase = true
[merge]
	conflictStyle = diff3
	renameLimit = 9999
	tool = vimdiff
[mergetool]
	prompt = true
[rebase]
	autoSquash = true
[apply]
	whitespace = fix
[rerere]
	enabled = true
	autoUpdate = true
[status]
	showUntrackedFiles = all
	showStash = true
[diff]
	algorithm = histogram
	submodule = log
	tool = vimdiff
[difftool]
	prompt = false
[column]
	ui = auto
[interactive]
	diffFilter = delta --color-only --features=interactive
[pager]
	; log = LESS= less -Rq+g
	; whatchanged = LESS= less -Rq+g
	; diff = LESS= less -RSqx4+g
	; stash = false
	branch = false
[color]
	ui = true
[color "status"]
	untracked = blue
[delta]
	tabs = 4
	features = decorations
	navigate = true
	line-numbers = true
	syntax-theme = TwoDark
	grep-output-type = ripgrep
	width = 1
	minus-style = syntax "#450a15"
	minus-emph-style = syntax "#600818"
	plus-style = syntax "#0b4820"
	plus-emph-style = syntax "#175c2e"
	hunk-header-style = syntax bold
	hunk-header-decoration-style = omit
	file-style = magenta italic
	file-decoration-style = magenta ul
	line-numbers-zero-style = "#4b5263"
	line-numbers-left-format = "{nm:^4} "
	line-numbers-right-format = "{np:^4} "
[delta "interactive"]
	keep-plus-minus-markers = false
[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax
[alias]
	alias = ! git config -l | grep ^alias | cut -c 7- | sort
	ignore = update-index --assume-unchanged
	dontignore = update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	append = commit --amend --no-edit
	staged = diff --cached
	divergence = diff master origin/master
	localhist = "reflog --abbrev-commit --pretty=format:'%Cblue%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'"
	vdiff = ! "f () { git difftool --tool=vimdiff -- \"$@\"; }; f"
