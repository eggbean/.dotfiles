Match localuser u0_a423
	PKCS11Provider /data/data/com.termux/files/usr/lib/libtergent.so

Match all
	Include ~/.ssh/*.conf

Host mikrotik
	HostName 192.168.88.1
	IdentityFile ~/.ssh/id_rsa
	ForwardAgent no

Host bastet
	HostName bastet.jinkosystems.co.uk
	ProxyJump none
	ForwardAgent yes
	VerifyHostKeyDNS ask
	ControlMaster yes
	RemoteForward /run/user/1000/gnupg/S.gpg-agent ${HOME}/.gnupg/S.gpg-agent.extra

Host vega pegasus osiris amunet
	HostName %h.jinkosystems.co.uk
	ProxyJump bastet.jinkosystems.co.uk
	ForwardAgent yes
	VerifyHostKeyDNS ask
	RemoteForward /run/user/1000/gnupg/S.gpg-agent ${HOME}/.gnupg/S.gpg-agent.extra

Host *
	User jason
	IdentityFile ~/.ssh/id_ed25519
	IdentitiesOnly yes
	AddKeysToAgent yes
	ForwardAgent no
	GSSAPIAuthentication no
	VerifyHostKeyDNS no
	StrictHostKeyChecking accept-new
	HashKnownHosts no
	StreamLocalBindUnlink yes
	ServerAliveInterval 30
	ControlMaster auto
	ControlPersist 15m
	ControlPath ~/.ssh/ssh_control-%n-%p-%r
	Compression yes
	ForwardX11 no
	ForwardX11Trusted no
	SendEnv LANG LC_*
